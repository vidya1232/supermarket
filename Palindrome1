import java.util.Scanner;
class Palindrome1
/*Palindrome number in java: A palindrome number is a number that is same after reverse. 
For example 545, 151, 34543, 343, 171, 48984 are the palindrome numbers.*/
{
public static void main(String[]args)
{
Scanner cc = new Scanner(System.in);
System.out.println("enter a number");
int n = cc.nextInt();
int temp,r,sum=0;
temp=n;
while(n>0){
r=n%10;
sum =(sum*10)+r;
n=n/10;
}
if(temp==sum)
{
	System.out.println("yes it palindrome number");
}
else
{
System.out.println("no it is not palindrome number");	
}
}
}
